@{
    ViewData["Title"] = "Home Page";
}
@using Newtonsoft.Json;

<!-- Load jQuery first -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link href="https://unpkg.com/tabulator-tables@5.4.4/dist/css/tabulator.min.css" rel="stylesheet">
<script src="https://unpkg.com/tabulator-tables@5.4.4/dist/js/tabulator.min.js"></script>
@*<script src="~/js/Products.js"></script>*@
<script src="~/js/Employees.js"></script>

<!-- Modal Employees -->
<div class="modal" tabindex="-1" role="dialog" id="modalEmployee">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Employee</h5>
                <button type="button" onclick="CancelInsert()" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div id="DivEmployee" class="modal-body">

                <!-- Body Modal -->
                <form id="EmployeeForm">
                    <input type="hidden" id="EmployeeID" />

                    <div class="mb-3">
                        <label for="FirstName" class="form-label">First Name</label>
                        <input type="text" class="form-control" id="FirstName" />
                    </div>

                    <div class="mb-3">
                        <label for="LastName" class="form-label">Last Name</label>
                        <input type="text" class="form-control" id="LastName" />
                    </div>

                    <div class="mb-3">
                        <label for="Title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="Title" />
                    </div>

                    <div class="mb-3">
                        <label for="Address" class="form-label">Address</label>
                        <input type="text" class="form-control" id="Address" />
                    </div>

                    <div class="mb-3">
                        <label for="Country" class="form-label">Country</label>
                        <input type="text" class="form-control" id="Country" />
                    </div>
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" onclick="SaveOrEditEmployee()" id="AddEmployee" class="btn btn-modal-primary"><span class="bi bi-save mr-1"></span>&nbsp;Save</button>
                <button type="button" onclick="CancelInsert()" id="CancelButton" class="btn btn-modal-cancel" data-bs-dismiss="modal"><span class="bi bi-x-circle mr-1"></span>&nbsp;Cancel</button>
            </div>
        </div>
    </div>
</div>


<div class="container mt-3">
    <h2>Listado de Empleados</h2>

    <!-- Barra de búsqueda general -->
    <input id="globalFilter" type="text" placeholder="search by name..." class="form-control mb-3" />
    
    <!-- Boton Search Employee -->
    <button class="btn btn-success" id="btnNewEmployee">
        <i class="bi bi-plus-circle"></i> Search
    </button>

    <div id="employeeGrid"></div>
</div>



<style>
    #productGrid {
        max-width: 100%;
        overflow-x: auto;
    }

    .validate-required-fields {
        border: 1px solid red !important;
    }
</style>

